BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_distance
            text: '4.1'
            font_size: 40
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 35
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 35
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 35
        on_press: app.handle_calculation()
    Label:
        id: output_label
        font_size: 48
        text: 'Enter a value in the text field to convert'
        color: (1, 1, 0, 1)
